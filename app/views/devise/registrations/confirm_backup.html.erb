<div>

  <h2>入力情報の確認</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <p><%= f.label :name, "名前" %><%= f.text_field :name, value: @user.name, readonly: true %></p>
    <p><%= f.label :email, "Eメール" %><%= f.text_field :email, value: @user.email, readonly: true %></p>

    <p><%= f.label :password, "パスワード" %>
    <%= f.password_field :password, value: @user.password, readonly: true %></p>

    <p><%= f.label :sex, "性別" %>
    <%= f.input :sex, @user.sex_txt %></p>

    <%= f.submit "修正する", name: :back %>
    <%= f.submit "登録する" %>

  <% end %>
</div>