<div class="contents-row">
<div class="contents-row__container">
    <h2>新規登録</h2>
  <%= simple_form_for @user, url: users_sign_up_confirm_path(@user), local: true do |f| %>
      <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name, "名前" %><br />
    <%= f.text_field :name, autofocus: true, :placeholder => "例)山田 太郎"  %>
  </div>

      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, class: 'email', :placeholder => "例)forexample@aaa.co.jp"  %>
      </div>


      <div class="field">
    <%= f.label :password, "パスワード(6文字以上)" %><br />
    <%# <% if @minimum_password_length %> 
      <%# (<%= @minimum_password_length %>
      <%# 文字以上)<br /> %>
    <%# <% end %>
            <%= f.password_field :password %>  
      </div>
    <%= f.label "生年月日" %><br />
    <%= f.date_select :birthday, use_month_numbers: true,
    start_year: 1930,
    end_year: (Time.now.year - 10),
    default: Date.new(1989, 1, 1) %><br />
    
      <div class="field">
    <%= f.label :prefecture_id, "都道府県" %>
    <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, include_blank: '選択して下さい' %>

    <div class="sex-field">
    <%= f.label :sex, "性別" %></br>
    <%= f.input :sex, label: false, :as => :radio_buttons %>
    </div>

      <div class="actions">
        <%= f.submit "登録する" , class: 'sign-btn' ,required: true %>
      </div>
    <% end %>
  </div>
  </div>