<div class = "topics">
<h1>トピック一覧</h1>
<ul>
  <% @topics.each do |topic| %>
    <li><%= link_to topic.title, topics_show_path(topic.id) %>
    <td>　作成者：<%= topic.user.name %></td>
    <% if user_signed_in? && current_user.id == topic.user_id %>
    <%= link_to '[削除]', topic_destroy_path(topic.id), method: :destroy, data: {confirm: "削除してもよろしいですか？"} %>
    
</li>
<% end %>
  <% end %>
  



</ul>
</div>

